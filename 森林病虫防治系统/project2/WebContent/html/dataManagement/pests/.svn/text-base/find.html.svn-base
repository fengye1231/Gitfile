        }

        .control-group{
            margin-top: 2%;
            margin-left: 11%;
            width: 220px;
            display: inline-block;
        }
        .control-label{
            width: 70px;
        }
        .form-horizontal .control-label {
            text-align: left;
            margin-bottom:17px;
        }
        button{
